<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewSpinnerItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/titleSpinnerItem"
        android:layout_toEndOf="@id/imageViewSpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/spinnerText"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/priceSpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewSpinnerItem"
        android:textAlignment="center"
        android:layout_below="@id/titleSpinnerItem"
        android:textSize="15sp"
        android:textColor="@color/spinnerText"
        android:layout_marginTop="5dp"
        android:padding="5dp"/>
</RelativeLayout>